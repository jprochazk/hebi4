{
  "name": "hebi4-playground",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "grammar": "npx tree-sitter build node_modules/tree-sitter-hebi --wasm --output public/tree-sitter-hebi.wasm",
    "wasm": "wasm-pack build --target web --out-dir pkg --dev",
    "wasm:release": "wasm-pack build --target web --out-dir pkg --release",
    "dev": "npm run grammar && npm run wasm && vite",
    "build": "npm run grammar && npm run wasm:release && vite build",
    "preview": "vite preview"
  },
  "dependencies": {
    "@codemirror/state": "^6.0.0",
    "@codemirror/view": "^6.0.0",
    "codemirror": "^6.0.1",
    "tree-sitter-cli": "^0.25.10",
    "tree-sitter-hebi": "github:jprochazk/tree-sitter-hebi",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0"
  }
}
